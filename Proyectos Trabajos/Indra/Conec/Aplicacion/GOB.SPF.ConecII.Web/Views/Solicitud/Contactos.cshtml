@model IEnumerable<GOB.SPF.ConecII.Web.Models.UiClienteContacto>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="pull-right">
            <a id="btnNewContacto" class="btn btn-default btn-xs" name="contactoNew">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
        </span>
        Contactos
    </div>
    <div class="panel-body" style="height: 500px; overflow-x: hidden; overflow-y: scroll;">
        <table class="table table-responsive table-condensed">
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Cargo
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                        @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                        @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        <a id="btnEditContacto" class="btn btn-default btn-xs" name="contactoEdit" idCliente="@item.IdCliente" numero="@item.Numero" idContacto="@item.Identificador" dbSaved="@item.DbSaved">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a id="btnViewContacto" class="btn btn-default btn-xs" name="contactoDetail" idCliente="@item.IdCliente" numero="@item.Numero" idContacto="@item.Identificador" dbSaved="@item.DbSaved">
                            <i class="glyphicon glyphicon-eye-open"></i>
                        </a>
                        <a id="btnStatusContacto" class="btn btn-default btn-xs" name="contactoDelete" idCliente="@item.IdCliente" numero="@item.Numero" idContacto="@item.Identificador" dbSaved="@item.DbSaved">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<script>
    var contactosModel = function() { return @Html.Raw(Json.Encode(Model)) }();
</script>
