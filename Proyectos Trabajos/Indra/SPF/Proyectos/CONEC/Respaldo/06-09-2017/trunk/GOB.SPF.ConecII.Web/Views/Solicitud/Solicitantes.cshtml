@model IEnumerable<GOB.SPF.ConecII.Web.Models.UiSolicitante>
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="pull-right">
            <a href="#" class="btn btn-default btn-xs" name="solicitanteNew">
                <i class="glyphicon glyphicon-plus"></i>
            </a>
        </span>
        Solicitantes
    </div>
    <div class="panel-body" style="height: 300px; overflow-x: hidden; overflow-y: scroll;">
        <table class="table table-responsive table-condensed">
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Cargo
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                        @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                        @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        <a href="#" class="btn btn-default btn-xs" name="solicitanteEdit">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a href="#" class="btn btn-default btn-xs" name="solicitanteDetail">
                            <i class="glyphicon glyphicon-eye-open"></i>
                        </a>
                        <a href="#" class="btn btn-default btn-xs" name="solicitanteDelete">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </td>
                </tr>
        }

        </table>
    </div>
</div>