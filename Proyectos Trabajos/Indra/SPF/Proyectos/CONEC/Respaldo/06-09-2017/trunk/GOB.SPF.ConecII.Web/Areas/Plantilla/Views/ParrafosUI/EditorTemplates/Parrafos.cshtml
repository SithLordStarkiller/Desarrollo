@model GOB.SPF.ConecII.Entities.Plantilla.Parrafos
@Html.HiddenFor(model => model.IdParrafo)
@{
    GOB.SPF.ConecII.Entities.Plantilla.ParrafosDtoBuscar buscar = ViewBag.Buscar;
}
<div id="divParrafos">
    @Html.Hidden("IdParrafoBuscar", buscar.IdParrafoBuscar)
    @Html.Hidden("IdTipoDocumentoBuscar", buscar.IdTipoDocumentoBuscar)
    @Html.Hidden("NombreBuscar", buscar.NombreBuscar)
    @Html.Hidden("TextoBuscar", buscar.TextoBuscar)
    @Html.Hidden("FechaInicialBuscar", buscar.FechaInicialBuscar)
    @Html.Hidden("FechaFinalBuscar", buscar.FechaFinalBuscar)
    @Html.Hidden("ActivoBuscar", buscar.ActivoBuscar)
    @Html.Hidden("PageCurrent", buscar.PageCurrent)
    @Html.Hidden("PageSize", buscar.PageSize)
    @Html.Hidden("ItemId", buscar.ItemId)

    @Html.ValidationSummary(true)

    <div class="row form-group">
        @Html.LabelFor(model => model.IdParrafo, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.IdParrafo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdParrafo)
        </div>
        @Html.LabelFor(model => model.Nombre, new { @class = "col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.Texto, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Texto)
        </div>
        @Html.LabelFor(model => model.FechaInicial, new { @class = "col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.FechaInicial, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FechaInicial)
        </div>
    </div>
    <div class="row form-group">
        @Html.LabelFor(model => model.FechaFinal, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.FechaFinal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FechaFinal)
        </div>
        @Html.LabelFor(model => model.Activo, new { @class = "col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.Activo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Activo)
        </div>
    </div>
    <div class="row form-group">
        @if(Model.TiposDocumento == null)
        { 
            @Html.LabelFor(model => model.IdTipoDocumento, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                @Html.DropDownListFor(model => model.IdTipoDocumento, new SelectList(ViewBag.lstTiposDocumento, "Id", "Valor"), "Seleccionar...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTipoDocumento)
            </div>
        }
        else
        {
            @Html.LabelFor(model => model.TiposDocumento.Nombre, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                @Html.EditorFor(model => model.TiposDocumento.Nombre, new { htmlAttributes = new { @class = "form-control ", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TiposDocumento.Nombre)                
            </div>
            @Html.HiddenFor(model => model.IdTipoDocumento)
        }
    </div>
</div>
