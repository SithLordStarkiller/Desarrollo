@{
    ViewBag.Title = "Consulta Periodos";
}
@section Styles{
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
}
<ol class="breadcrumb">
    <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span></li>
    <li><a href="#">Catalogos</a></li>
    <li><a href="~/Catalogo/Periodos" class="active">Periodos</a></li>
</ol>
<div class="flip">
    <div class="front">
        <div class="top-buffer">
            <h3>@ViewBag.Title</h3>
            <hr class="red">
        </div>
            <div class="col-sm-3 form-group">
                <label class="control-label">Estatus:</label>
                <div class="col-sm-12">
                    <label class="radio-inline" for="activo">
                        <input type="radio" name="estatus" value="true" checked="checked">Activo
                    </label>
                    <label class="radio-inline" for="inactivo">
                        <input type="radio" name="estatus" value="false">Inactivo
                    </label>
                </div>
            </div>
        <div class="ui-widget col-sm-3 form-group">
            <label class="control-label">Periodo:</label>
            <input id="Periodos" class="form-control dropdown-toggle" placeholder="Ingresa Nombre">
        </div>
            <div class="pull-right">
                <button type="button" class="btn btn-default" id="btnBuscar">
                    <span class="glyphicon glyphicon-search"></span>Buscar
                </button>
            </div>            
            <div id="divPeriodo"></div>        
        </div>
    <div class="back">

    </div>
</div>
<input type="hidden" id="IdPeriodo" />
@section Scripts{
    <script src="~/Scripts/conec/catalogo/periodo.js"></script>    
    <script src="~/Scripts/jquery/jquery-ui.js"></script>

}

