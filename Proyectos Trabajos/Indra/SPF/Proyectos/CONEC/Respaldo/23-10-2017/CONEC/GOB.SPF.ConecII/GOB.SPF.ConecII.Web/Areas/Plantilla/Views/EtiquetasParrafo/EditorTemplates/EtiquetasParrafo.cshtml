@model GOB.SPF.ConecII.Web.Models.UiEtiquetasParrafo
@{
    bool actionView = Model.Action.Equals(GOB.SPF.ConecII.Web.Models.UiEnumEntity.View);
}
@using (Html.BeginForm("Factor", "Catalogo", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "etiquetasParrafoForm" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Identificador)
   
    <div class="top-buffer">
        <h3>@ViewBag.Title</h3>
        <hr class="red">
    </div>
    

    <div class="form-group">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.IdParrafo, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            @Html.DropDownListFor(model => model.IdParrafo, new SelectList(ViewBag.lstParrafos, "Identificador", "Valor"), "Seleccionar...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdParrafo)
        </div>
                
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Etiqueta, new { @class = "col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            @Html.EditorFor(model => model.Etiqueta, new { htmlAttributes = new { @class = "form-control" }, placeplaceholder = "Ingresa la etiqueta a remplzar" })
            @Html.ValidationMessageFor(model => model.Etiqueta)
        </div>
    
        
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Contenido, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            @Html.EditorFor(model => model.Contenido, new { htmlAttributes = new { @class = "form-control" }, placeplaceholder = "Ingresa el contenido de la etiqueta" })
            @Html.ValidationMessageFor(model => model.Contenido)
        </div>
        
        
    </div>
    <div class="form-group">
        

        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Orden, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            @Html.EditorFor(model => model.Orden, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Orden)
        </div>
     
        
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Activo)
            @Html.CheckBoxFor(model => model.EsActivo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EsActivo)
        </div>

        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Negrita)
            @Html.CheckBoxFor(model => model.EsNegrita, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EsNegrita)
        </div>
        
    </div>
    
    <p class="pull-left">*Campos obligatorios</p>
    <div class="pull-right">
        <button type="button" class="btn btn-default" id="btnBack">
            <span class="glyphicon glyphicon-backward"></span>Cancelar
        </button>

        @if (!actionView)
        {
            <button type="button" class="btn btn-default" id="btnSave">
                <span class="glyphicon glyphicon-save"></span>Guardar
            </button>
        }
    </div>

}