@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listaAreas = (IEnumerable<SelectListItem>)ViewBag.ListaAreas;
}
<ol class="breadcrumb">
    <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span></li>
    <li><a href="#">Seguridad</a></li>
    <li><a href="#" class="active">Administracion de roles</a></li>
</ol>
<div class="flip">
    <div class="front">
        <div class="top-buffer">
            <h3>Administracion de roles</h3>
            <hr class="red">
        </div>
        <div class="col-sm-12">
            <div class="col-lg-12" style="margin-top: 25px;">
                <div class="col-sm-4">
                    <label class="">Area:</label>
                    @Html.DropDownList("ddlAreas", listaAreas, new { @class = "form-control", placeholder = "Tipo de servicio" })
                </div>
                <div class="col-sm-4">
                    <label class="">Rol:</label>
                    @*@Html.DropDownList("ddlRoles", listaRoles, new {@class = "form-control", placeholder = "Tipo de servicio"})*@
                    <input placeholder="Buscar por rol" class="form-control" type="text" id="txbRol">
                </div>
                <div class="col-sm-4">
                    <label class="control-label">Tipo de rol:</label>
                    <div class="" style="margin-top: 10px;">
                        <label class="radio-inline">
                            <input type="radio" name="rdbTipoRol" value="true" >Externo
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="rdbTipoRol" value="false" checked="checked">Interno
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-lg-12" style="margin-top: 25px;">
                <div class="col-sm-4">
                    <label class="control-label">Estatus:</label>
                    <div class="" style="margin-top: 10px;">
                        <label class="radio-inline">
                            <input type="radio" name="rdbActivo" value="true" checked="checked">Activo
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="rdbActivo" value="false">Inactivo
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="pull-right">
            <button type="button" class="btn btn-default" id="btnBuscar">
                <span class="glyphicon glyphicon-search"></span>Buscar
            </button>
        </div>
        <div id="divRoles" class="col-lg-12" style="margin-top: 20px;"></div>
    </div>
    <div class="back">

    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Controls/chosen.jquery.js"></script> 
    <script src="~/Scripts/conec/Seguridad/AdminRoles.js"></script>
}