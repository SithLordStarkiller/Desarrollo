@using GOB.SPF.ConecII.Web.Models
@model UiRol
@{
    var listaAreas = (IEnumerable<SelectListItem>)ViewBag.ListaAreas;

    var interno = true;

    if (Model != null)
    {
        interno = (Model.IdArea != null && Model.IdArea != 0);
    }
}
<div>
    @using (Html.BeginForm("AdminRol", "Seguridad", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "AdminRolForm" }))
    {
        @Html.ValidationSummary(true)
        <div class="top-buffer">
            <h3>@ViewBag.Title</h3>
            <hr class="red">
        </div>
        <br />
        <br />
        if (!Model.Action.Equals(UiEnumEntity.View))
        {
            @Html.HiddenFor(x => x.Id)
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-4">
                        <label>Nombre*:</label>
                        <div class="">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <label>Descripcion*:</label>
                        <div class="">
                            @Html.TextBoxFor(model => model.Descripcion, new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    @if (Model.Action.Equals(UiEnumEntity.New))
                    {
                        <div class="col-sm-4">
                            <label class="control-label">Tipo de rol:</label>
                            <div class="" style="margin-top: 10px;">
                                <label class="radio-inline">
                                    <input type="radio" name="rdbTipoRolPa" value="Interno" checked="checked">Interno
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="rdbTipoRolPa" value="Externo">Externo
                                </label>

                            </div>
                        </div>
                    }
                </div>
                <div class="col-lg-12" id="divArea">
                    @if (Model.Action.Equals(UiEnumEntity.New))
                    {
                        <div class="col-lg-4">
                            <label>Area*:</label>
                            <div class="">
                                @Html.DropDownListFor(model => model.IdArea, listaAreas, new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.IdArea, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            @Html.HiddenFor(x => x.Id)
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-lg-4">
                        <label>Nombre*:</label>
                        <div class="">
                            @Html.TextBoxFor(model => model.Name, new {@class = "form-control", disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <label>Descripcion*:</label>
                        <div class="">
                            @Html.TextBoxFor(model => model.Descripcion, new {@class = "form-control", disabled = "disabled"})
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    @if (interno)
                    {
                        <div class="col-sm-4">
                            <label class="control-label">Tipo de rol:</label>
                            <div class="" style="margin-top: 10px;">
                                <label class="radio-inline">
                                    <input type="radio" name="rdbTipoRolPa" value="Interno" checked="checked" disabled="disabled">Interno
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="rdbTipoRolPa" value="Externo" disabled="disabled">Externo
                                </label>

                            </div>
                        </div>
                    }
                </div>
                @if (interno)
                {
                    <div class="col-lg-12" id="divArea">
                        <div class="col-lg-4">
                            <label>Area*:</label>
                            <div class="">
                                @Html.DropDownListFor(model => model.IdArea, listaAreas, new {@class = "form-control", disabled = "disabled"})
                                @Html.ValidationMessageFor(model => model.IdArea, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <br />
        <p class="pull-left">*Campos obligatorios</p>
        <div class="pull-right">
            <button type="button" class="btn btn-default" id="btnBack">
                <span class="glyphicon glyphicon-backward"></span>Cancelar
            </button>
            @if (Model.Action.Equals(UiEnumEntity.New) || Model.Action.Equals(UiEnumEntity.Edit))
            {
            <button type="button" class="btn btn-default" id="btnSave">
                <span class="glyphicon glyphicon-save"></span>Guardar
            </button>
            }
        </div>
    }
</div>
