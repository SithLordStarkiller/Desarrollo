@using GOB.SPF.ConecII.Entities;
@model Tuple<string, string, IPagedView>

<div id="pager" class="container form-inline">

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            @if (Model.Item3.HasPreviousPage)
            {

                Model.Item3.Filtros.PageNumber = Model.Item3.PreviousPage;

                @Ajax.ActionLink("Anterior", Model.Item1, Model.Item2,
                    Model.Item3.Filtros,
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "searchResults"
                }, new { @class = "btn btn-default" })

            }
            else
            {
                <a class="btn btn-default" disabled="disabled">Anterior</a>
            }

            @if (Model.Item3.HasNextPage)
            {
                Model.Item3.Filtros.PageNumber = Model.Item3.NextPage;

                @Ajax.ActionLink("Siguiente", Model.Item1, Model.Item2,
                    Model.Item3.Filtros,
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "searchResults"
                }, new { @class = "btn btn-default" })

            }
            else
            {
                <a class="btn btn-default" disabled="disabled">Siguiente</a>
            }
        </div>
    </div>
</div>