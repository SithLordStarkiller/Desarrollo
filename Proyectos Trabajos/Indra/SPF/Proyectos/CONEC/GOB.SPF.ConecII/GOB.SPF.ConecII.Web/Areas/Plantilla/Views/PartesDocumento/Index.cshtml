                                    @Html.EditorFor(model => model.PartesDocumento.Ccp, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PartesDocumento.Ccp)
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="back">

        </div>
    </div>
@section Scripts{

    <script src="~/Scripts/conec/Plantilla/contratantes.js"></script>
    <script src="~/Scripts/conec/Plantilla/estiquetas.js"></script>
