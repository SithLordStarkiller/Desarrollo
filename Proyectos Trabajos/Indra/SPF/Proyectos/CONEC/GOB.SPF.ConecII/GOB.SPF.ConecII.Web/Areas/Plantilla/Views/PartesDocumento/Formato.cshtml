@model GOB.SPF.ConecII.Web.Models.UiPartesDocumento
@{
    ViewBag.Title = "Administrar Partes del Documento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/bootstrap/fileinput.min.css" rel="stylesheet" />

