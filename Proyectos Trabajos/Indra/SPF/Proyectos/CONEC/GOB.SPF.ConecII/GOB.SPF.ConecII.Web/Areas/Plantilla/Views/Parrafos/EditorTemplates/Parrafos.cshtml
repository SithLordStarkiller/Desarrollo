@model GOB.SPF.ConecII.Web.Models.UiParrafos
@{
    bool actionView = Model.Action.Equals(GOB.SPF.ConecII.Web.Models.UiEnumEntity.View);
}
@using (Html.BeginForm("Factor", "Catalogo", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "parrafosForm" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Identificador)
    @Html.Hidden("IdParteDocumentoParrafos", Model.IdParteDocumento)

    <div class="top-buffer">
        <h3>@ViewBag.Title</h3>
        <hr class="red">
    </div>
    
    <div class="row form-group">    
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Nombre)
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeplaceholder = "Ingresa Nombre" } })
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Activo, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            @Html.CheckBoxFor(model => model.EsActivo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EsActivo)
        </div>
        


        
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.IdTipoSeccion, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            @Html.DropDownListFor(model => model.IdTipoSeccion, new SelectList(ViewBag.lstTiposSeccion, "Identificador", "Valor"), "Seleccionar...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdTipoSeccion)
        </div>

    </div>
    <div class="row form-group">
        
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.LabelFor(model => model.Texto)
            @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control", placeplaceholder = "Ingresa el texto que contendra la sección" } })
            @Html.ValidationMessageFor(model => model.Texto)
        </div>
        
    </div>
    <p class="pull-left">*Campos obligatorios</p>
    <div class="pull-right">
        <button type="button" class="btn btn-default" id="btnBack">
            <span class="glyphicon glyphicon-backward"></span>Cancelar
        </button>

        @if (!actionView)
        {
            <button type="button" class="btn btn-default" id="btnSave">
                <span class="glyphicon glyphicon-save"></span>Guardar
            </button>
        }
    </div>

}