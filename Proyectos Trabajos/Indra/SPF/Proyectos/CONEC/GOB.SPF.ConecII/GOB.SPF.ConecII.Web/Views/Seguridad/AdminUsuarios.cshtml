@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listaAreas = (IEnumerable<SelectListItem>)ViewBag.ListaAreas;
    var listaRoles = (IEnumerable<SelectListItem>)ViewBag.ListaRoles;
}
<ol class="breadcrumb">
    <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span></li>
    <li><a href="#">Seguridad</a></li>
    <li><a href="#" class="active">Administracion de usuarios</a></li>
</ol>
<div class="flip">
    <div class="front">
        <div class="top-buffer">
            <h3>Administracion de usuarios</h3>
            <hr class="red">
        </div>
        <div class="col-sm-12">
            <div class="col-lg-12" style="margin-top: 25px;">
                <div class="col-sm-4">
                    <label class="control-label">Tipo de usuario:</label>
                    <div class="" style="margin-top: 10px;">
                        <label class="radio-inline">
                            <input type="radio" name="rdbTipoUsuario" value="Externo" checked="checked">Externo
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="rdbTipoUsuario" value="Interno">Interno
                        </label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <label class="">Servicio (Razon social):</label>
                    <input placeholder="Buscar por servicio" class="form-control" type="text" id="txbServicio">
                </div>
                <div class="col-sm-4">
                    <label class="">Tipo de contacto:</label>
                    <input placeholder="Buscar por tipo de contacto" class="form-control" type="text" Id="txbTipoContacto">
                </div>
            </div>
            <div class="col-lg-12" style="margin-top: 25px;">
                <div class="col-sm-4">
                    <label class="">Area:</label>
                    @Html.DropDownList("ddlAreas", listaAreas, new { @class = "form-control", placeholder = "Tipo de servicio" })
                </div>
                <div class="col-sm-4">
                    <label class="">Rol:</label>
                    @Html.DropDownList("ddlRoles", listaRoles, new {@class = "form-control", placeholder = "Tipo de servicio"})
                </div>
                <div class="col-sm-4">
                    <label class="control-label">Activo:</label>
                    <div class="" style="margin-top: 10px;">
                        <label class="radio-inline">
                            <input type="radio" name="rdbActivo" value="true" checked="checked">Si
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="rdbActivo" value="false">No
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="pull-right">
            <button type="button" class="btn btn-default" id="btnBuscar">
                <span class="glyphicon glyphicon-search"></span>Buscar
            </button>
        </div>
        <div id="divUsuarios" class="col-lg-12" style="margin-top: 20px;"></div>
    </div>
    <div class="back">

    </div>
</div>

@section Scripts{
    <link href="~/Content/Conec/Seguridad/AdminUsuarios.css" rel="stylesheet" />
    <script src="~/Scripts/conec/Seguridad/AdminUsuarios.js"></script>
}