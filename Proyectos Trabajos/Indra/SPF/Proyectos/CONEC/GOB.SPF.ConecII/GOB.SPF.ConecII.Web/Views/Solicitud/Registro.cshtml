@model GOB.SPF.ConecII.Web.Models.UiCliente
<div id="HideView">
    <div id="Header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="icon icon-home"></i></a></li>
            <li><a href="#">Solicitud</a></li>
            <li class="active">Registros</li>
        </ol>
    </div>
    @using (Html.BeginForm("Registro", "Solicitud", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "registroForm" }))
    {
        @Html.ValidationSummary(true)
        <div class="top-buffer">
            <h3>@ViewBag.Title</h3>
            <hr class="red" />
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Tipo Solicitud
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">
                                <input id="TipoSolicitud1" name="tipoSolicitud" type="radio" value="1" checked /> Nueva solicitud de servicio
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label">
                                <input id="TipoSolicitud2" name="tipoSolicitud" type="radio" value="2" /> Solicitud por Modificación de Contrato
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label">
                                <input id="TipoSolicitud3" name="tipoSolicitud" type="radio" value="3" /> Solicitud por Continuidad de servicio
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-heading">
                Datos del cliente
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-7">
                            @Html.LabelFor(m => m.RazonSocial, "Razón Social:")
                            @Html.DisplayFor(m => m.RazonSocial, new { @class = "form-control", placeholder = "Ingresa la Razón Social", @readonly = true, @disabled = true })
                        </div>
                        <div class="col-md-5">
                            @Html.LabelFor(m => m.NombreCorto, "Nombre Corto:")
                            @Html.DisplayFor(m => m.NombreCorto, new { @class = "form-control", placeholder = "Ingresa el Nombre Corto", @readonly = true, @disabled = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.RFC, "RFC:")
                            @Html.DisplayFor(m => m.RFC, new { @class = "form-control", placeholder = "Ingresa el RFC del cliente", @readonly = true, @disabled = true })
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.IdRegimenFiscal, "Régimen Fiscal:")
                            @Html.DisplayFor(m => m.RegimenFiscal)
                        </div>
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.IdSector, "Sector:")
                            @Html.DisplayFor(m => m.Sector)
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-heading">
                Domicilio fiscal
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.Label("Entidad:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.Estado)
                    </div>
                    <div class="col-md-3">
                        @Html.Label("Municipio:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.Municipio)
                    </div>
                    <div class="col-md-6">
                        @Html.Label("Asentamiento:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.Asentammiento)
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-3">
                        @Html.Label("Código Postal:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.CodigoPostal)
                    </div>
                    <div class="col-md-4">
                        @Html.Label("Calle:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.Calle)
                    </div>
                    <div class="col-md-2">
                        @Html.Label("No. Exterior:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.NoExterior)
                    </div>
                    <div class="col-md-2">
                        @Html.Label("No. Interior:")
                        @Html.DisplayFor(m => m.DomicilioFiscal.NoInterior)
                    </div>
                </div>
            </div>
            <div class="panel-heading">
                Solicitantes
            </div>
            <div class="panel-body">
                <div id="clienteSolicitantes"></div>
                <div id="partialSolicitante" class="hide-form"></div>
            </div>
            <div class="panel-heading">
                Contactos
            </div>
            <div class="panel-body">
                <div id="clienteContactos"></div>
                <div id="partialContacto" class="hide-form"></div>
            </div>
        </div>


        <div class="panel panel-default">
            <div class="panel-heading">
                Servicios
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="form-horizontal">
                        @if (Model.Action.Equals(GOB.SPF.ConecII.Web.Models.UiEnumEntity.View))
                        {
                            <div class="col-md-6">
                                @Html.Label("Tipo Servicio*:")
                                @Html.DropDownList("IdTipoServicio", (IEnumerable<SelectListItem>)ViewBag.TipoServicio, "Seleccione", htmlAttributes: new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" })
                            </div>
                            <div class="col-md-offset-4 panel-body col-md-1">
                                <button type="button" class="btn btn-default" id="ServicesType" readonly="readonly" disabled="disabled">
                                    <span class="glyphicon glyphicon-save"></span>
                                    Agregar
                                </button>
                            </div>
                            <div id="clienteServicios"></div>
                        }
                        else
                        {
                            <div class="col-md-6">
                                @Html.Label("Tipo Servicio*:")
                                @Html.DropDownList("IdTipoServicio", (IEnumerable<SelectListItem>)ViewBag.TipoServicio, "Seleccione", htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="col-md-offset-4 panel-body col-md-1">
                                <button type="button" class="btn btn-default" id="ServicesType">
                                    <span class="glyphicon glyphicon-save"></span>
                                    Agregar
                                </button>
                            </div>
                            <div id="clienteServicios"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Documentos
            </div>
            <div class="panel-body">
                @if (Model.Action.Equals(GOB.SPF.ConecII.Web.Models.UiEnumEntity.View))
                {
                    <div class="col-md-12">
                        <div id="clienteDocumentos"></div>
                    </div>
                }
                else
                {
                    <div class="col-md-6">
                        <label class="control-label">Documento Soporte:</label>
                        <div class="input-group">
                            <label id="LblDocumento" class="input-group-btn">
                                <span class="btn btn-primary" id="BtnDocumento" style="box-shadow: 0 0px 0 0 #1b5dab;padding: 7px 33px; width:150px;">
                                    Browse&hellip; <input type="file" name="documentoSolicitud" id="documento" style="display: none; overflow:hidden;">
                                </span>
                            </label>
                            <input type="text" id="fileUrl" class="form-control" readonly="readonly" disabled="disabled" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="clienteDocumentos"></div>
                    </div>
                }
            </div>
        </div>

        <div class="panel">
            <div class="panel-body">
                <p class="pull-left">*Campos obligatorios</p>
                <div class="pull-right">
                    <button type="button" class="btn btn-default" id="btnBack">
                        <span class="glyphicon glyphicon-backward"></span>
                        Cancelar
                    </button>

                    @if (Model.Action.Equals(GOB.SPF.ConecII.Web.Models.UiEnumEntity.Add))
                    {
                        <button type="button" class="btn btn-default" id="btnSave">
                            <span class="glyphicon glyphicon-save"></span>
                            Guardar
                        </button>
                    }
                </div>
            </div>
        </div>
        <input type="hidden" id="IdClient" />
    }
</div>
<div>
    <div id="partial1" class="hide-form"></div>
</div>

@* MODAL DE MODIFICACIÓN DE LA SOLICITUD *@
<div>
    <div id="modificarSolicitudes"></div>
</div>
<script>
    var clienteModel = function () { return @Html.Raw(Json.Encode(Model)) }();
</script>