            @Html.ValidationMessageFor(model => model.Activo)
        </div>
    </div>
    <div class="row form-group">
        @if (Model.Parrafos == null)
        { 
            @Html.LabelFor(model => model.IdParrafo, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                @Html.DropDownListFor(model => model.IdParrafo, new SelectList(ViewBag.lstParrafos, "Id", "Valor"), "Seleccionar...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdParrafo)
            </div>
        }
        else
        {
        @Html.LabelFor(model => model.Parrafos.Nombre, new { @class = "col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 control-label" })
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            @Html.EditorFor(model => model.Parrafos.Nombre, new { htmlAttributes = new { @class = "form-control ", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Parrafos.Nombre)
        </div>
        @Html.HiddenFor(model => model.IdParrafo)
        }
    </div>
